<main>
    <h1 class="header-title">
        Books
    </h1>
</main>
<div class="main-visual">
    <h3>Title</h3>
    <h3>Body</h3>
</div>
<div class="books-content">
    <% @books.each do |book| %>
     <div class="books-list">
        <div class="book-show">
        <p><%= book.title %></p>
        </div>
        <div class="book-show-1">
        <p><%= book.body %></p>
        </div>
        <div class="book-show-2">
            <p class="show-btn"><%= link_to "show", book_path(book.id) %></p>
            <p class="show-btn"><%= link_to "edit", edit_book_path(book.id) %></p>
            <p class="show-btn"><%= link_to "destroy", book_path(book.id), method: :delete %></p>
        </div>
        </div>
    <% end %>
    </div>
    <footer>
    <div class="new-book">
        <h1 class="footer-title">NEW BOOK</h1>
        <%= form_with model: @book, local:true do |f| %>
        <% if @book.errors.any? %>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
        <% end %>
            <h4>title</h4>
                <%= f.text_field :title %>
            <h4>body</h4>
                <%= f.text_area :body %>
                <%= f.submit 'create book' %>
        <% end %>
    </div>
    </footer>