<main>
    <h1 class="header-title">
        Books
    </h1>
</main>
<table>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    </tr>
    <% @books.each do |book| %>
     <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
            <p><%= link_to "show", book_path(book.id) %><p>
            <p><%= link_to "edit", edit_book_path(book.id) %></p>
            <p><%= link_to "destroy", book_path(book.id), method: :delete %></p>
        </td>
        </tr>
    <% end %>
    </table>
    <div div class="form">
        <h1>NEW BOOK</h1>
        <%= form_with model: @book,  url: "/books/#{@book.id}", local:true do |f| %>
        <%= render 'books/form', model: f.object %>
                <%= f.label :title %>
                <br>
                <%= f.text_field :title %>
                <br>
                <%= f.label :body %>
                <br>
                <%= f.text_area :body %>
                <br>
                <%= f.submit 'Create Book' %>
        <% end %>
        </div>
        </div>